@model IEnumerable<Demo1.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Employees List</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Position</th>
            <th>Department</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Position</td>
                <td>@employee.Department?.Name</td>
                <td>@employee.Salary</td>
                <td> 
                    <!-- This is called Anchor -->
                    <a class="btn btn-primary" href="@Url.Action("Edit", "Employee", new { id = employee.Id })">Edit</a>
                    <form asp-action="Delete" asp-controller="Employee" asp-route-id="@employee.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
