@model Department
@{
    ViewData["Title"] = "New Department";
}

<h1>New Department</h1>

<!-- Use POST, not GET -->
<form method="post" action="/Department/Create">
    <div>
        <label for="Name">Department Name</label>
        <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
    </div>

    <div>
        <label for="Location">Location</label>
        <input type="text" id="Location" name="Location" class="form-control" value="@Model.Location" required />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Create</button>
        <a href="/Department/Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
